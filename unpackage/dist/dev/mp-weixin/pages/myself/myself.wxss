.home .swiper-image {
  height: 250rpx;
  width: 700rpx;
  box-shadow: 1 1 10rpx black;
  border-radius: 25rpx;
}
.home .body {
  padding: 0 30rpx;
  background-color: #ECECEC;
}
.home .header {
  background-color: #6FAD8F;
  padding: 25rpx;
  padding-bottom: 60rpx;
}
.home .box {
  background-color: #fff;
  border-radius: 25rpx;
  margin: 0 30rpx;
  margin-top: -50rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 700rpx;
  padding: 60rpx 25rpx;
  box-shadow: 9px 10px 16px rgba(0, 0, 0, 0.5);
  box-sizing: border-box;
}
.home .item {
  width: 100%;
  border-style: solid;
  border-width: 1px;
  border-color: black;
  border-radius: 20rpx;
  box-shadow: 4px 5px 8px rgba(0, 0, 0, 0.3);
  display: flex;
  box-sizing: border-box;
  margin: 8rpx 0;
  padding: 16rpx;
  align-items: center;
  text-align: center;
  line-height: 60rpx;
  flex-direction: column;
  font-weight: 550;
  font-size: 80%;
}
.home .slogan {
  font-size: 9pt;
}